      "miDebuggerServerAddress": "127.0.0.1:1234",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Set libc path",
          "text": "set substitute-path ../../../../../../../share/HOST/AURIX_MINGW/SRC /home/jcq/workspace/github/tricore",
          "ignoreFailures": false
        },
        {
          "description": "Set libc path2",
          "text": "set substitute-path ../../../../../../../../share/HOST/AURIX_MINGW/SRC /home/jcq/workspace/github/tricore",
          "ignoreFailures": false
        },
        {
          "description": "Set arch",
          "text": "set architecture TriCore:V1_8",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "c demo"
