  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) asm demo",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/asm_demo.elf",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "miDebuggerPath": "/home/jcq/workspace/github/tricore/gcc11/tricore-gcc-toolchain/INSTALL/bin/tricore-elf-gdb",
      "miDebuggerServerAddress": "127.0.0.1:1234",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "set architecture tricore",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "asm demo"
    },
    {
      "name": "(gdb) c demo",
      "type": "cppdbg",
      "request": "launch",
